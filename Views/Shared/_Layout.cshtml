<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CMDb - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="maincontainer">
        <header>
            <div class="logo">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><h1>CMDb</h1></a>
            </div>
            <div class="search">
                <form action="javascript:void(0)">
                    <input type="text" />
                    <button type="submit">
                        Search
                    </button>
                </form>
            </div>
            <div class="spacer"></div>
            <a href="javascript:void(0)" onclick="showMobileSearch()"><div class="searchicon"></div></a>
        </header>
        <div class="mobilesearch">
            <form class="searchformmobile">
                <a href="javascript:void(0)" onclick="showMobileSearch()" class="backbutton"><</a>
                <input type="text" />
                <button type="submit">
                    Search
                </button>
            </form>
        </div>
        <main>
            @RenderBody()
        </main>

        <footer>
            Created by Anton Svedin and Hampus Victorén.
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
